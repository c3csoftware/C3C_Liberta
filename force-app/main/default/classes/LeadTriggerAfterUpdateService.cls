    public void passarDadosLeadParaConta(List<ILeadDomain> listaLeadDomain)
    {
        Boolean leadEstaConvertido = verificarSeLeadEstaConvertido(listaLeadDomain);

        if (leadEstaConvertido)
        {   
            fflib_ISObjectUnitOfWork uow = (fflib_ISObjectUnitOfWork) C3C_DIContainer_Injector.newInstance('fflib_SObjectUnitOfWork', new Schema.SObjectType[]{
                Account.SObjectType
            });

            for (ILeadDomain leadDomain : listaLeadDomain)
            {
                LeadMapper leadMpp = leadDomain.obterMapper();
                
                this.convertLead(leadMpp.recordId);
                
                ContaMapper contaMpp = this.contaServiceInstance.obterContaPorId(leadMpp.contaId);
				System.debug('ContaMapper: '+ contaMpp);
                contaMpp.codigo = leadMpp.codigoXp;
                contaMpp.nome = leadMpp.nome + ' ' + leadMpp.sobrenome; 

                if (String.isBlank( leadMpp.cpf ))
                    contaMpp.cnpj =  leadMpp.cnpj;
                else
                    contaMpp.cpf = leadMpp.cpf;
                

                uow.registerDirty(contaMpp.record);

            }

            uow.commitWork();
        }
    }

