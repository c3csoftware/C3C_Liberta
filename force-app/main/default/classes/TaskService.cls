    {
        ITaskDomain taskDomain = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain');

        return (List<TaskMapper>) taskDomain.construirListTaskMapper(this.taskSelectorInstance.buscarTarefasAbertasComTipoTarefaIdRelacionado(idRegistro, listaIdTipoTarefa, idUsuario));
    }

    //Responsável por retornar a lista de tarefas do mês relacionado ao id relativo.
    public List<TaskMapper> obterTarefasMesComIdRelativo(String idRelativo, String idProprietario)
    {
        ITaskDomain taskDomain = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain');

        return (List<TaskMapper>) taskDomain.construirListTaskMapper(this.taskSelectorInstance.buscarTarefasMesComIdRelativo(idRelativo, idProprietario));
    }

    public void verificarSeTarefaRelacionadaEstaPreenchida(String idRelativo)
    {
        ITaskDomain tarefa = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain', this.taskSelectorInstance.obterTarefaPorTipoDeTarefaEWhatIdComLimitacao(idRelativo, 'Qualificacao de Lead'));

        List<IInstanciaRespostaDomain> listaRespostas = this.instanciaRespostaServiceInstance.obterInstanciaRespostaPorIdTarefa(tarefa.obterMapper().recordId);

        if (listaRespostas.size() <= 0)
            C3C_APP_ApplicationContext.addCriticalError('400', 'Não é possível agendar evento sem preenhcer o POP');
    }

