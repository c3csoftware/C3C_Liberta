    // Exceptions
    public class TaskServiceException extends Exception {}

    public void inserirTarefa(String assunto, String proprietario, String relativo, String tipoTarefa) 
    {
        fflib_ISObjectUnitOfWork uow = (fflib_ISObjectUnitOfWork) C3C_DIContainer_Injector.newInstance('fflib_SObjectUnitOfWork', new Schema.SObjectType[]{Task.SObjectType});

        ITaskDomain taskDomain = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain');
        TaskMapper taskMapper = taskDomain.criaTaskMapper(assunto, proprietario, relativo, tipoTarefa);
        uow.registerNew(taskMapper.record);

        uow.commitWork();
    }
    
    public void inserirListaTarefa(List<TaskMapper> listaTarefa) 
    {
        fflib_ISObjectUnitOfWork uow = (fflib_ISObjectUnitOfWork) C3C_DIContainer_Injector.newInstance('fflib_SObjectUnitOfWork', new Schema.SObjectType[]{Task.SObjectType});
		
        for(TaskMapper task : listaTarefa)
        {
            uow.registerNew(task.record);
        }

        uow.commitWork();
    }

    public List<TaskMapper> obterTaskPorListaWhatId(List<String> listaRelativo)
    {
        ITaskDomain taskDomain = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain');

        return (List<TaskMapper>) taskDomain.construirListTaskMapper(this.taskSelectorInstance.obterTaskPorListaWhatId(listaRelativo));
    }

    public List<TaskMapper> obterTaskPorListaWhatIdTipoTarefa(List<String> listaRelativo, List<String> tiposTarefa)
    {
        ITaskDomain taskDomain = (ITaskDomain) C3C_DIContainer_Injector.newInstance('TaskDomain');

        return (List<TaskMapper>) taskDomain.construirListTaskMapper(this.taskSelectorInstance.obterTaskPorListaWhatIdTipoTarefa(listaRelativo, tiposTarefa));
    }

    //Responsável por retornar a lista de tarefas que estão em aberto informando o registro relacionado e uma lista de tipos de tarefas.
